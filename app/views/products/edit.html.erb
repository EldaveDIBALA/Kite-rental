<div class="col-lg-6">
  <% if @product.photo.attached? %>
    <%= cl_image_tag @product.photo.key, class: 'card-img-top rounded-3' %>
  <% else %>
    <%= image_tag 'https://res.cloudinary.com/deewxzlno/image/upload/v1723576878/production/ff8xadzogussxwlwzpyk.jpg', class: 'card-img-top rounded-3' %>
  <% end %>

  <%= simple_form_for(@product) do |f| %>
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.input :name, label: 'Nom du produit' %>
    </div>

    <div class="form-group">
      <%= f.input :description, as: :text, label: 'Description' %>
    </div>

    <div class="form-group">
      <%= f.input :price_per_day, as: :numeric, label: 'Prix par jour' %>
    </div>

    <div class="form-group">
      <%= f.button :submit, 'Update Product', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', product_path(@product), class: 'mt-3 btn btn-secondary' %>
</div>
