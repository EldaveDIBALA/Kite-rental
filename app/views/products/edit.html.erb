<h1>Edit Product</h1>

<%= simple_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :name, label: 'Product Name' %>
  </div>

  <div class="form-group">
    <%= f.input :description, as: :text, label: 'Description' %>
  </div>

  <div class="form-group">
    <%= f.input :price_per_day, as: :numeric, label: 'Price per Day' %>
  </div>

  <div class="form-group">
    <%= f.button :submit, 'Update Product', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', product_path(@product), class: 'mt-3 btn btn-secondary' %>
