<%= simple_form_for @product do |f| %>
  <div class="form-group">
    <%= f.input :name, label: 'Product Name' %>
  </div>

  <div class="form-group">
    <%= f.input :description, as: :text, label: 'Description' %>
  </div>

  <div class="form-group">
    <%= f.input :price_per_day, as: :numeric, label: 'Price per Day' %>
  </div>

  <div class="form-group">
    <%= f.button :submit , class: 'btn btn-primary' %>
  </div>

<% end %>

<%= link_to 'Back', root_path, class: 'mt-3 btn btn-secondary' %>
