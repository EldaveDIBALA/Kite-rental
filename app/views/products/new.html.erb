<div class="container">
  <div class="mt-4 mb-3">
    <h1>Cr√©er un nouveau produit</h1>
  </div>

  <div class="col-lg-6">
    <%= simple_form_for @product do |f| %>
      <div class="form-group">
        <%= f.input :name, label: 'Nom du produit' %>
      </div>

      <div class="form-group">
        <%= f.input :description, as: :text, label: 'Description du produit' %>
      </div>

      <div class="form-group">
        <%= f.input :address, label: 'Adresse du produit' %> <!-- Ajout du champ pour l'adresse -->
      </div>

      <div class="form-group">
        <%= f.input :price_per_day, as: :numeric, label: 'Prix par jour' %>
      </div>

      <div class="form-group">
        <%= f.input :photo, as: :file %>
      </div>

      <div class="form-group">
        <%= f.button :submit, class: 'btn btn-primary text-light' %>
      </div>

    <% end %>

    <%= link_to 'Back', root_path, class: 'mt-3 btn btn-secondary' %>
  </div>
</div>
