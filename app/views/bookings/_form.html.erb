<%= simple_form_for [@booking.user, @booking] do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :product_id, value: @booking.product_id %>
  <%# f.association :product %>
  <%= f.input :start_date, label: "Date de début", as: :string, input_html: { class: 'datepicker', min: Date.today.to_s}%>
  <%= f.input :end_date, label: "Date de fin", as: :string, input_html: { class: 'datepicker', min: Date.today.to_s} %>
  <%= f.button :submit, "Réserver", class: 'btn btn-primary text-light mb-3' %>
<% end %>
