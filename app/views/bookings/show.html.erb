<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6 mt-3">
      <% if @product.photo.attached? %>
        <%= cl_image_tag @product.photo.key, class: 'card-img-top rounded-3 img-fluid' %>
      <% else %>
        <%= image_tag app/assets/images/kite.jpeg, class: 'card-img-top rounded-3 img-fluid' %>
      <% end %>
    </div>

    <div class="col-md-6 mt-3">
      <h1>Détails de la réservation</h1>

      <div class="booking-details">
        <p><strong>Date de début :</strong> <%= @booking.start_date.strftime("%d/%m/%Y") %></p>
        <p><strong>Date de fin :</strong> <%= @booking.end_date.strftime("%d/%m/%Y") %></p>
        <p><strong>Produit :</strong> <%= link_to @booking.product.name, product_path(@booking.product), class: 'no-underline' %></p>
        <p><strong>Confirmation du propriétaire :</strong> <%= @booking.confirmed ? 'Confirmed' : 'En attente' %></p>
        <p><strong>Prix total :</strong> <%= (@booking.total_price) %>€</p>
      </div>

      <div class="actions">
        <%= link_to 'Modifier', edit_user_booking_path(current_user, @booking), class: 'btn btn-primary text-light'%>
        <%= link_to 'Supprimer', user_booking_path(current_user, @booking), data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this booking?' }, class: 'btn btn-warning text-light' %>
      </div>
    </div>
  </div>
</div>
