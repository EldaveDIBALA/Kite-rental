<div class="container">
  <h1 class="mt-3">Détails de la Réservation</h1>

  <div class="booking-details">
    <p><strong>Date de début :</strong> <%= @booking.start_date %></p>
    <p><strong>Date de fin :</strong> <%= @booking.end_date %></p>
    <p><strong>Produit : </strong><%= link_to @booking.product.name, product_path(@booking.product) %></p>
    <p><strong>Confirmation du propriétaire :</strong> <%= @booking.confirmed ? 'Confirmed' : 'Pending' %></p>
    <p><strong>Prix total :</strong> <%= (@booking.total_price) %>€</p>
  </div>

  <div class="actions">
    <%= link_to 'Modifier', edit_user_booking_path(current_user, @booking), class: 'btn btn-primary text-light'%>
    <%= link_to 'Supprimer', user_booking_path(current_user, @booking), data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this booking?' }, class: 'btn btn-warning text-light' %>
    <%= link_to 'Voir mes réservations', user_bookings_path(current_user), class: 'btn btn-secondary' %>
  </div>
</div>
