<h1>My Bookings</h1>

<% if @bookings.empty? %>
  <p>You have no bookings.</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Product</th>
        <th>Confirmed</th>
        <th>Total Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= booking.product.name %></td>
          <td><%= booking.confirmed ? 'Confirmed' : 'Pending' %></td>
          <td><%= (booking.total_price) %>â‚¬</td>
          <td>
            <%= button_to 'Show', user_booking_path(current_user, booking), class: 'btn btn-primary my-2 text-light' %>
            <%= button_to 'Delete', user_booking_path(current_user, booking), data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this booking?' }, class: 'btn btn-danger text-light' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
