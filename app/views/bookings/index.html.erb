<h1>My Bookings</h1>

<% if @bookings.empty? %>
  <p>You have no bookings.</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Product</th>
        <th>Confirmed</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= booking.product.name %></td>
          <td><%= booking.confirmed ? 'Confirmed' : 'Pending' %></td>
          <td>
            <%= link_to 'Show', user_booking_path(current_user, booking) %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
